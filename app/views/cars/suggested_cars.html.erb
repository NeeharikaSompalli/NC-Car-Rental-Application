<p id="notice"><%= notice %></p>

<h1>Suggested Cars</h1>

<p>List of cars for approval:</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Style</th>
      <th>Location</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>

      <tr>
        <td><%= car.car_name %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.car_model %></td>
        <td><%= car.style %></td>
        <td><%= car.location %></td>
        <td><%= car.car_price %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <td><%= link_to 'Destroy', car_path(car), data: { confirm: 'Are you sure?' , method: :delete} %></td>
        <td><%= link_to 'Approve', approve_car_path(car) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', cars_path, :class => 'button' %>